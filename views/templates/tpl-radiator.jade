script#job-template(type='text/html').
    <div class="ui centered segment inverted" data-bind="jobStatusColor: color">
      <div class="content">
        <a class="header" data-bind="attr: {href: url}, text: name"></a>
        <!-- ko if: loading -->
          <div class="ui active dimmer">
            <div class="ui loader"></div>
          </div>
        <!-- /ko -->
        <!-- ko if: job.detailsLoaded -->
          <!--Last build: <a data-bind="text: lastBuild.number, click: $root.getLastBuildInfo.bind($data)"></a>-->
          Last build: <a data-bind="attr: {href: lastBuild.url}, text: lastBuild.number"></a> by
        <!-- /ko -->
        <!-- ko if: lastBuildInfo().loading -->
        Loading...
        <!-- /ko -->
        <!-- ko if: lastBuildInfo().changeSet && lastBuildInfo().changeSet.items().length > 0-->
          <a data-bind="attr: {href: $data.lastBuildInfo().changeSet.items()[0].author.absoluteUrl},
              text: $data.lastBuildInfo().changeSet.items()[0].author.fullName"></a>
        <!-- /ko -->
        <!-- ko if: job.detailsLoaded -->
          <div class="description" data-bind="text: description"></div>
        <!-- /ko -->
        </div>
        <div class="extra content">
          [<i class="" data-bind="text: color">Build color</i>]
        </div>
    </div>
